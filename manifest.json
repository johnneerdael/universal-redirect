{
  "manifest_version": 3,
  "name": "Universal Redirector",
  "version": "1.0",
  "description": "A open-source Universal Redirector specialized for Medium, Youtube and Instagram.",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}